#!/bin/bash

# Define the branch
branch=${1:-$(git rev-parse --abbrev-ref HEAD)}

# Get the current timestamp
timestamp=$(date +%Y%m%d%H%M%S)

# Backup the branch
git checkout $branch
git checkout -b "${branch}_backup_${timestamp}"

# Delete the original branch
git branch -d $branch

# Check out the original branch again from the remote repository
git checkout $branch